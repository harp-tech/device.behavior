<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Harp.Behavior.Design.App"
             RequestedThemeVariant="Default"
             Name="Harp.Behavior">
  <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->
  <Application.Styles>
    <FluentTheme />
    <StyleInclude Source="avares://Harp.Behavior.Design/Styles/DefaultStyles.axaml" />
    <StyleInclude Source="avares://Avalonia.Controls.ColorPicker/Themes/Fluent/Fluent.xaml" />
    <Style Selector="Rectangle">
      <Setter Property="Fill" Value="{DynamicResource GridLineBrush}" />
    </Style>
  </Application.Styles>

  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
          <SolidColorBrush x:Key="GridLineBrush" Color="LightGray" />
        </ResourceDictionary>
        <ResourceDictionary x:Key="Dark">
          <SolidColorBrush x:Key="GridLineBrush" Color="#555555" />
        </ResourceDictionary>
      </ResourceDictionary.ThemeDictionaries>
    </ResourceDictionary>
  </Application.Resources>

  <NativeMenu.Menu>
    <NativeMenu>
      <NativeMenuItem Header="About Harp.Behavior" Click="NativeMenuItem_OnClick" />
    </NativeMenu>
  </NativeMenu.Menu>
</Application>
