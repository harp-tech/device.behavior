                    <CheckBox Grid.Row="3" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="{Binding IsDO1Enabled_OutputSet}" IsEnabled="True" Margin="0,0,0,0"/>
                    <CheckBox Grid.Row="4" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="{Binding IsDO2Enabled_OutputSet}" IsEnabled="True" Margin="0,0,0,0"/>
                    <CheckBox Grid.Row="5" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="{Binding IsDO3Enabled_OutputSet}" IsEnabled="True" Margin="0,0,0,0"/>

