                    <CheckBox Grid.Row="8" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="{Binding IsLed0Enabled_OutputSet}" IsEnabled="True" Margin="0,0,0,0"/>
                    <CheckBox Grid.Row="9" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="{Binding IsLed1Enabled_OutputSet}" IsEnabled="True" Margin="0,0,0,0"/>

