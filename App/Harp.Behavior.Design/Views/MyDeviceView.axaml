                    <NumericUpDown Grid.Row="9" Grid.Column="1" Value="{Binding PulseLed1}" Minimum="1" Maximum="65535" ClipValueToMinMax="True" Increment="1" FormatString="F0" Width="150" HorizontalAlignment="Left" Margin="0,5,0,0"/>

