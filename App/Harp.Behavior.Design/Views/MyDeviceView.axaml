                    <StackPanel Grid.Row="2" Grid.Column="6" VerticalAlignment="Center" HorizontalAlignment="Center">
                      <controls:VisualStatus Status="{Binding IsDO0Enabled_OutputState}" Width="15" Height="15"/>
                    </StackPanel>
                    <StackPanel Grid.Row="3" Grid.Column="6" VerticalAlignment="Center" HorizontalAlignment="Center">
                      <controls:VisualStatus Status="{Binding IsDO1Enabled_OutputState}" Width="15" Height="15"/>
                    </StackPanel>
                    <StackPanel Grid.Row="4" Grid.Column="6" VerticalAlignment="Center" HorizontalAlignment="Center">
                      <controls:VisualStatus Status="{Binding IsDO2Enabled_OutputState}" Width="15" Height="15"/>
                    </StackPanel>
                    <StackPanel Grid.Row="5" Grid.Column="6" VerticalAlignment="Center" HorizontalAlignment="Center">
                      <controls:VisualStatus Status="{Binding IsDO3Enabled_OutputState}" Width="15" Height="15"/>
                    </StackPanel>

                    <!-- LEDs Section -->
                    <TextBlock Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="7" Text="LEDs" FontWeight="Bold" VerticalAlignment="Center" Margin="5,30,5,0"/>
                    <Rectangle Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="7" Height="1" Fill="LightGray" VerticalAlignment="Bottom" Margin="0,30,0,0"/>

