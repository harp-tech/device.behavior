                    <TextBlock Grid.Row="8" Grid.Column="0" Text="LED 0" VerticalAlignment="Center" Margin="10"/>
                    <TextBlock Grid.Row="9" Grid.Column="0" Text="LED 1" VerticalAlignment="Center" Margin="10"/>

