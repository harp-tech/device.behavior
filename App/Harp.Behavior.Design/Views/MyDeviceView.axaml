                    <TextBlock Grid.Row="7" Grid.Column="1" Text="Pulse Duration (ms)" FontWeight="Bold" Margin="0,15,10,10"/>
                    <TextBlock Grid.Row="7" Grid.Column="2" Text="Enable" HorizontalAlignment="Center" FontWeight="Bold" Margin="0,15,0,10"/>
                    <TextBlock Grid.Row="7" Grid.Column="3" Text="Current (mA)" FontWeight="Bold" Margin="0,15,0,10"/>
                    <TextBlock Grid.Row="7" Grid.Column="4" Text="Max Current (mA)" FontWeight="Bold" Margin="0,15,0,10"/>
                    <TextBlock Grid.Row="7" Grid.Column="5" Text="Set" HorizontalAlignment="Center" FontWeight="Bold" Margin="0,15,0,10"/>
                    <TextBlock Grid.Row="7" Grid.Column="6" Text="State" HorizontalAlignment="Center" FontWeight="Bold" Margin="0,15,0,10"/>

