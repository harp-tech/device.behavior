                    <StackPanel Grid.Row="8" Grid.Column="6" VerticalAlignment="Center" HorizontalAlignment="Center">
                      <controls:VisualStatus Status="{Binding IsLed0Enabled_OutputState}" Width="15" Height="15"/>
