                    <StackPanel Grid.Row="9" Grid.Column="6" VerticalAlignment="Center" HorizontalAlignment="Center">
                      <controls:VisualStatus Status="{Binding IsLed1Enabled_OutputState}" Width="15" Height="15"/>
